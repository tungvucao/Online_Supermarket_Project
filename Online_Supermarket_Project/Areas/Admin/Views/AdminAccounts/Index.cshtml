@model IEnumerable<Online_Supermarket_Project.Models.Account>

@{
    ViewData["Title"] = "Quản lý Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>
        Quản lý Quyền Truy Cập
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">QL Hệ Thống</a></li>
        <li class="active">Quản lý Quyền Truy Cập</li>
    </ol>
</section>

<section class="content">

    <!-- Default box -->
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div style="display:flex">
                    <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Create" style="margin-right:20px" class="btn btn-success">+ Add Account</a>
                    <select style="max-width:200px; margin-right:20px" id="idRole" name="idRole" class="form-control" asp-items="ViewBag.Roles">
                        <option value="">Select Role</option>
                    </select>
                    <select style="max-width:200px;" id="idActive" name="idActive" class="form-control" asp-items="ViewBag.AcountActive">
                        <option value="">Status</option>
                    </select>
                </div>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 250px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Active</th>
                            <th>Role</th>
                            <th>Last Login</th>
                            <th>Created Date</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.AccountId</td>
                                    <td>@item.FullName</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>
                                        @if (@item.Status)
                                        {
                                            <span class="label label-success">Active</span>
                                        }else{
                                            <span class="label label-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>@item.Role?.Description</td>
                                    <td>@item.LastLogin</td>
                                    <td>@item.CreatedDate</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-success">Chi Tiết</a> |
                                        <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-primary">Sửa</a> |
                                        <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-danger">Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>Không có bản ghi nào</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.box -->

</section>