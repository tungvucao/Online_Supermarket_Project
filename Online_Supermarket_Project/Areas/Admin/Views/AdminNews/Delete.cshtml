@model Online_Supermarket_Project.Models.New

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>
        Delete New
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a asp-area="Admin" asp-controller="AdminNews" asp-action="Index">News Management</a></li>
        <li class="active">Delete New</li>
    </ol>
</section>

<section class="content">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body">
                <div>
                    <a class="btn btn-success" asp-area="Admin" asp-controller="AdminNews" asp-action="Index">Back to List</a>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-5">
                        <img src="/images/news/@Model.Thumb" alt="User Image" width=500px"">
                    </div>
                    <div class="col-md-7">
                        <table class="table table-striped ">
                            <tbody>
                                <tr>
                                    <td>ID: </td>
                                    <td>@Model.NewId</td>
                                </tr>
                                <tr>
                                    <td>Name: </td>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <td>Status: </td>
                                    <td>
                                        @if (Model.Published)
                                        {
                                            <span class="label label-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">Inactive</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Is New Feed: </td>
                                    <td>
                                        @if (Model.IsHot)
                                        {
                                            <span class="label label-success">New Feed</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">-</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Is Hot: </td>
                                    <td>
                                        @if (Model.IsNewFeed)
                                        {
                                            <span class="label label-success">Hot</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">-</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Delete: </td>
                                    <td>
                                        <form asp-action="Delete">
                                            <input type="hidden" asp-for="NewId" />
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
                <br />
            </div>
        </div>
    </div>
</section>